= form_for([current_group, @example], :html => {:class => "form-horizontal"}) do |f|
  - if @example.errors.any?
    #error_explanation
      %h2
        = pluralize(@example.errors.count, "error")
        prohibited this #{current_group.example_name} from being saved:
      %ul
        - @example.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col-md-12
      .form-group
        .col-md-1
          = hidden_field_tag "lp_val", (@lp && @lp.id) || ""
      .form-group
        .col-md-12
          = label :stored_values, 'Words', :class => "control-label"
          .controls
            = text_area :stored_values, 'Words', :value => @example.stored_value('Words'), :rows => 4, :class => "col-md-12"
        .col-md-12
          = label :stored_values, 'Gloss', :class => "control-label"
          .controls
            = text_area :stored_values, 'Gloss', :value => @example.stored_value('Gloss'), :rows => 4, :class => "col-md-12"
        .col-md-12
          = label :stored_values, 'Translation', :class => "control-label"
          .controls
            = text_area :stored_values, 'Translation', :value => @example.stored_value('Translation'), :rows => 4, :class => "col-md-12"
        .col-md-12
          = label :stored_values, 'Comment', :class => "control-label"
          .controls
            = text_area :stored_values, 'Comment', :value => @example.stored_value('Comment'), :rows => 4, :class => "col-md-12"
      .form-group
        .col-md-6
          .controls
            = f.submit :class => "btn btn-success", :id => "save-example"
    .col-md-4
      .row
        = hidden_field_tag "ling_name", "#{@ling ? @ling.name : "" }", :id => "ling-search-field", :placeholder => "Loading...", :class => "form-control", :autocomplete => "off", :disabled => true
      .row
        = hidden_field_tag "prop_name", "#{@property ? @property.name : "" }", :id => "prop-search-field", :placeholder => "Loading...", :class => "form-control", :autocomplete => "off", :disabled => true
